<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="remote.jop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Control.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FindRemoteJob"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Control.Company.CompanySignUp"
            android:exported="false" />
        <activity
            android:name=".SwitchActivity"
            android:exported="false" />
        <activity
            android:name=".Control.Company.CompanyPostJob"
            android:exported="false" />
        <activity
            android:name=".Control.Company.CompanyLogin"
            android:exported="false" />
        <activity
            android:name=".Control.ResetPassword.ResetPasswordCheckEmail"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Control.ResetPassword.ResetPassword"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Control.User.UserSignUp.UserSignUp"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Control.User.Login.UserLogin"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Control.User.MainUI.MainActivity"
            android:exported="false" />
        <activity
            android:name=".Control.SplashScreen"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>