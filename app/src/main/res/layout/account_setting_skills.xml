<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/processing_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <View
            android:id="@+id/tab_one_processing_bar_account_setting"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/processing_bar"/>

        <View
            android:id="@+id/tab_two_processing_bar_account_setting"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/processing_bar"
            android:backgroundTint="@color/main_color"/>
        <View
            android:id="@+id/tab_three_processing_bar_account_setting"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:background="@drawable/processing_bar"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/processing_bar"
        android:layout_centerInParent="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/ic_mental_health_amico" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_below="@id/image"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/user_name_account_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Skill"
            android:background="@drawable/edit_text"
            android:padding="16dp"
            android:layout_marginBottom="32dp"
            android:elevation="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:fontFamily="@font/main_light_font"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add"
            android:layout_gravity="center"/>


    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/second_ui_account_setting_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/main_color"
        android:contentDescription="Next"
        android:src="@drawable/ic_baseline_navigate_next_24"
        app:tint="@color/white" />

</RelativeLayout>