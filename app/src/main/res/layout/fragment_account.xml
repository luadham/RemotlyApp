<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Start Setting Layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_share_24"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/account_setting_account_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_settings_24"
            android:layout_marginEnd="16dp"/>

        <ImageButton
            android:id="@+id/logout_account_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:background="@drawable/ic_logout_svgrepo_com"
            android:backgroundTint="@color/gray"/>
    </LinearLayout>
    <!-- End Setting Layout -->


    <!-- Start Knowladge Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp">

        <TextView
            android:id="@+id/user_name_account_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:fontFamily="@font/gtwalsheimboldweb"
            android:textSize="35sp"
            android:layout_marginBottom="8dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Software Enginner"
            android:textColor="@color/mini_dark_gray"
            android:fontFamily="@font/gtwalsheimlightweb"
            android:textSize="25sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="@color/mini_dark_gray"
            android:gravity="center"
            android:fontFamily="@font/gtwalsheimlightweb"
            android:textSize="16sp"
            android:lineHeight="21dp"
            android:text="Description Only"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Knowladge"
                android:fontFamily="@font/gtwalsheimboldweb"
                android:textColor="@color/main_color"
                android:layout_marginEnd="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/mini_dark_gray"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <!-- Start Knowlage -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adham"/>
        </LinearLayout>
        <!-- End Knowlage -->

    </LinearLayout>
    <!-- End Knowladge Layout -->
</LinearLayout>